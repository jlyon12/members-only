extends layout
include ../partials/mixins

block content
	main
		form.m-8.grid.gap-4.rounded.border.bg-zinc-50.p-4.text-lg.shadow(
			action='/message/create',
			method='POST',
			class='sm:mx-auto sm:max-w-sm md:max-w-md lg:max-w-xl'
		)
			h2.text-2xl.font-bold New Message
			hr
			fieldset.grid.gap-4
				+form-control('Title',"title")#title(
					for='title',
					name='title',
					type='title',
					value=message && message.title
				)
				+form-control('Content',"content",message&&message.content)#content(
					for='content',
					name='content',
					type='textarea'
				)

			if errors
				i.mx-auto.text-rose-500 Unable to post message
			+btn('Post').mx-auto
