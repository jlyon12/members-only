extends layout
include ../partials/mixins

block content
	main.grid.flex-1.place-content-center
		form.m-8.grid.gap-8.rounded.border.bg-zinc-50.p-4.text-lg.shadow(
			action='',
			method='POST',
			class='sm:max-w-sm md:max-w-md lg:max-w-xl'
		)
			h2.text-2xl.font-bold.text-rose-500 Confirm Delete
			hr
			p Delete the following message?
				div
					p.mb-2.text-sm.font-bold #{ message.title }
					p.text-sm #{ message.content }

			button.mx-auto.inline-flex.w-fit.rounded.bg-zinc-200.px-2.py-1.shadow(
				class='hover:bg-zinc-300 hover:font-semibold focus:bg-zinc-300 focus:font-semibold active:bg-zinc-300 active:font-semibold'
			) Delete
